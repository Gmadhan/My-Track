<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190sp"
    android:background="@drawable/oval_bottom"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingBottom="@dimen/dp10"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.mytrack.utils.customtext.RegularTextView
        android:id="@+id/edit_profile"
        android:background="@drawable/ic_editprofile"
        android:layout_margin="@dimen/dp5"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="70sp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_profileimage"
        android:layout_height="@dimen/dp70"
        android:id="@+id/header_imageView"
        app:siBorderWidth="0sp"
        app:siBorderColor="@color/AppColor" />

    <com.mytrack.utils.customtext.RegularTextView
        android:id="@+id/name_device"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLength="20"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/dp25"
        android:text="@string/name"/>

</LinearLayout>
