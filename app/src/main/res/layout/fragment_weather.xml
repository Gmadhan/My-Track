<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"

    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:visibility="gone" />

    <include
        android:id="@+id/header"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/imageview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/AppColor"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="@dimen/dp15"
                        app:cardCornerRadius="@dimen/dp8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp250"
                            android:background="@color/White"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/temp_lay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/dp5"
                                android:layout_marginEnd="@dimen/dp5"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <com.mytrack.utils.customtext.RegularTextView
                                    android:id="@+id/txt_temperature"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/dp3"
                                    android:text="0 \u2103"
                                    android:textColor="@color/TextBlack"
                                    android:textSize="@dimen/dp26" />

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="@dimen/dp28"
                                    android:layout_height="@dimen/dp28"
                                    android:layout_gravity="center"
                                    app:lottie_autoPlay="true"
                                    app:lottie_fileName="thermometer.json"
                                    app:lottie_loop="true" />

                            </LinearLayout>

                            <com.mytrack.utils.customtext.RegularTextView
                                android:id="@+id/txt_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLength="20"
                                android:padding="@dimen/dp3"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/TextBlack"
                                android:textSize="@dimen/sp18"
                                android:visibility="gone" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/LA_weather_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/txt_weather"
                                android:layout_gravity="center"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="loading_anim.json"
                                app:lottie_loop="true" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/dp5">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            app:srcCompat="@drawable/ic_sunrise" />

                        <com.mytrack.utils.customtext.RegularTextView
                            android:id="@+id/txt_sunrise"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/sunrise"
                            android:textSize="@dimen/dp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <com.mytrack.utils.customtext.RegularTextView
                            android:id="@+id/txt_sunset"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginEnd="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/sunset"
                            android:textSize="@dimen/dp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            app:srcCompat="@drawable/ic_sunset" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/temp_circle_cornor"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.mytrack.utils.customtext.SemiBoldTextView
                            android:id="@+id/txt_temp_max"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/dp10"
                            android:text="@string/maximum"
                            android:textColor="@color/TextWhite"
                            android:textSize="@dimen/dp16" />

                        <com.mytrack.utils.customtext.SemiBoldTextView
                            android:id="@+id/txt_temp_min"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/dp10"
                            android:text="@string/minimum"
                            android:textColor="@color/TextWhite"
                            android:textSize="@dimen/dp16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15"
                        android:layout_marginHorizontal="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            app:srcCompat="@drawable/ic_anemometer" />

                        <com.mytrack.utils.customtext.RegularTextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/wind"
                            android:textSize="@dimen/dp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_wind_speed"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="-"
                            android:textColor="@color/TextMediumGrey"
                            android:textSize="@dimen/dp16"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginHorizontal="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            app:srcCompat="@drawable/ic_pressure" />

                        <com.mytrack.utils.customtext.RegularTextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/pressure"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <com.mytrack.utils.customtext.RegularTextView
                            android:id="@+id/txt_pressure"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="-"
                            android:textColor="@color/TextMediumGrey"
                            android:textSize="@dimen/sp16"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginHorizontal="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            app:srcCompat="@drawable/ic_thermometer" />

                        <com.mytrack.utils.customtext.RegularTextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/temperature"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <com.mytrack.utils.customtext.RegularTextView
                            android:id="@+id/txt_temp"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="-"
                            android:textColor="@color/TextMediumGrey"
                            android:textSize="@dimen/sp16"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginHorizontal="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            app:srcCompat="@drawable/ic_humidity" />

                        <com.mytrack.utils.customtext.RegularTextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/humidity"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_humidity"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="-"
                            android:textColor="@color/TextMediumGrey"
                            android:textSize="@dimen/sp16"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginHorizontal="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            app:srcCompat="@drawable/ic_city" />

                        <com.mytrack.utils.customtext.RegularTextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/city"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <com.mytrack.utils.customtext.RegularTextView
                            android:id="@+id/txt_city"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="-"
                            android:textColor="@color/TextMediumGrey"
                            android:textSize="@dimen/sp16"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginHorizontal="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            app:srcCompat="@drawable/ic_country" />

                        <com.mytrack.utils.customtext.RegularTextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="@string/country"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/TextDarkGrey"/>

                        <com.mytrack.utils.customtext.RegularTextView
                            android:id="@+id/txt_country"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/dp5"
                            android:text="-"
                            android:textColor="@color/TextMediumGrey"
                            android:textSize="@dimen/sp16"
                            android:gravity="end"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
